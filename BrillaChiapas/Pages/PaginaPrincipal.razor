@page "/"


<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body class="body">
    <div class="fondo">
        <div class="seccion contenedor">
            <div >
                <h1>Boleta Electoral</h1>
                <h2>Puntos: @score</h2>
                <h2>Tiempo restante: @currentTime</h2>
              
                    <div class="contenedor-mensaje">
                        <button type="submit" class="btn-dark btn-lg" @onclick="() => BotonReicioAsync()">REINICIO</button>
                        <h2>@message</h2>
                    </div>
               
            </div>

            <main>
                <div>
                    <div class="board">
                        @foreach (var model in matriz)
                    {
                        <Squaere modelPrincipal="model" onMouseUp="() => MouseAction(model)"></Squaere>
                    }
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>


